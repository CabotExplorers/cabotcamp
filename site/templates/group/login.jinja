{% extends "layouts/modal-page.jinja" %}
{% block bodyclass %}dark{% endblock %}
{% block title %}Group Login{% endblock %}
{% block content %}
<div class="card login-form">
  <div class="card-body">
    <h4 class="card-title">Group Login</h4>
    <form method="POST" action="{{ url_for('group.processLogin') }}">
      <div class="form-row">
        <div class="form-group col-12">
          <label for="group">Group</label>
          <select required class="form-control" id="group" name="group">
            <option selected disabled value="">Choose...</option>
            {% for group in groups %}
            <option value="{{ group.id }}">{{ group.name }}</option>
            {% endfor %}
          </select>
        </div>
        <div class="form-group col-12">
          <label for="key">Key</label>
          <input required class="form-control" id="key" name="key" type="text" value="{{ key }}" />
          <div class="invalid-feedback">
            Invalid key
          </div>
        </div>

        <div class="form-group col-12 mt-2 mb-0">
            <button type="submit" class="btn btn-block btn-success"><i class="fas fa-sign-in-alt pr-2"></i>Login</button>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}
